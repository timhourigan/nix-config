# https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2
insert_final_newline = false

[Makefile]
indent_style = tab

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.nix]
indent_size = 2

[*.yaml]
indent_size = 2
